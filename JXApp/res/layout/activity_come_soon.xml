<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_main" 
    android:orientation="vertical"
    android:background="@color/state_background"
   	>
	
    <include layout="@layout/titlebar_default"/>
    
    <ImageView
        android:id="@+id/iv_come"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/imported_layers" />

	<TextView
	    android:id="@+id/tv_state_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="5dp"
	    android:layout_gravity="center"
	    android:text="即将推出"
	    android:textColor="@color/state_name_color"
	    android:textSize="16sp" 
	    />
	
	
	<TextView 
	    android:id="@+id/tv_state_describe"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	     android:layout_gravity="center"
	     android:textSize="14sp"
	     android:textColor="@color/state_describe_color"
	    android:text="我们正在努力开发此功能模块。"/>
	
	<TextView 
	    android:id="@+id/tv_state_describe1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	     android:layout_gravity="center"
	     android:textSize="14sp"
	     android:textColor="@color/state_describe_color"
	    android:text="该功能一旦推出,我们将立即通知您"/>
</LinearLayout>