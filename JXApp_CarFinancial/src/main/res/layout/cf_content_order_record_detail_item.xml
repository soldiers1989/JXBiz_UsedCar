<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch.Vertical"
    android:background="@color/white"
    android:divider="@drawable/horizon_divider"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:showDividers="end">

    <RelativeLayout
        style="@style/MatchMatch"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cf_order_record_detail_title"
            style="@style/WrapWrap"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="订单编号："
            android:textColor="#4a4a4a"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/cf_order_record_detail_title_desc"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:layout_toRightOf="@+id/cf_order_record_detail_title"
            android:text="D160727001"
            android:textColor="#222222"
            android:textSize="15dp" />
    </RelativeLayout>
</LinearLayout>