<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/titlebar_background"
        android:layout_width="match_parent"
        android:layout_height="42dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/titlebar_back_button"
            style="@style/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@mipmap/iv_back_titlebar_default_white"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:contentDescription="返回"
            android:layout_marginLeft="7dp"/>

        <TextView
            android:id="@+id/titlebar_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="二手车"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/titlebar_next_button"
            style="@style/anchor"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:textColor="#10a6e2"
            android:text="下一步"
            android:layout_marginRight="17dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/titlebar_divider_line"
        style="@style/divider" >
    </View>

</LinearLayout>