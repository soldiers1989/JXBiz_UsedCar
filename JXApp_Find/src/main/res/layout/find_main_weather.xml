<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"

    tools:context=".content.FindMainFragment">

    <LinearLayout
        android:id="@+id/find_ll_weather"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/find_tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/find_weather_navigation"
                android:drawablePadding="5dp"
                android:textColor="@color/car_name_color"
                android:textSize="15sp"
                android:text="" />

            <TextView
                android:id="@+id/find_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/car_name_color"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <!--  android:layout_gravity="center"-->
                <TextView
                    android:id="@+id/find_tv_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/car_name_color"
                    />

                <ImageView
                    android:id="@+id/find_iv_daytime"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="3dp"
                     />
               <!-- android:src="@drawable/cloudy1"-->

            </LinearLayout>
           <!-- -->
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/find_tv_tair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/car_name_color"
                android:text=""
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--  android:layout_gravity="center"-->
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="洗车指数"
                    android:textColor="@color/car_name_color" />

                <TextView
                    android:id="@+id/find_tv_car_wash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/find_car_wash_color"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:text="" />
            </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@mipmap/find_more_weather"/>


        </LinearLayout>
    <View
        style="@style/divider" />

</LinearLayout>