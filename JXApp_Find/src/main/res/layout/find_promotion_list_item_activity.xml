<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/layout_full_width"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip">

        <TextView
            android:id="@+id/find_txt_promotion_title"
            style="@style/title_smaller" />

        <TextView
            android:id="@+id/find_txt_promotion_color"
            style="@style/title_smaller"
            android:layout_below="@+id/find_txt_promotion_title" />

        <TextView
            android:id="@+id/find_txt_guideprice_text"
            style="@style/title_smaller"
            android:layout_alignParentRight="true"
            android:text="指导价" />

        <TextView
            android:id="@+id/find_txt_guideprice"
            style="@style/title_smaller"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/find_txt_guideprice_text" />
    </RelativeLayout>

    <View style="@style/divider" />

    <LinearLayout
        style="@style/layout_full_width"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/find_txt_promotion_price_text"
            style="@style/title_smaller"
            android:text="促销价" />

        <TextView
            android:id="@+id/find_txt_promotion_price"
            style="@style/text_orange"
            android:padding="5dp"
            android:textColor="@color/more_text" />

        <TextView
            android:id="@+id/find_txt_save_money"
            style="@style/text_smaller"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout_full_width"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:orientation="horizontal">

        <TextView
            style="@style/title_smaller"
            android:text="活动剩余时间" />

        <com.etong.android.jxappfind.utils.FindTimerTextView
            android:id="@+id/find_txt_time"
            style="@style/text_orange"
            android:padding="5dp"
            android:textColor="@color/more_text"/>
    </LinearLayout>

    <View style="@style/divider" />

    <LinearLayout
        style="@style/layout_full_width"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:orientation="vertical">

        <TextView
            style="@style/title_smaller"
            android:text="促销活动说明" />

        <TextView
            android:id="@+id/find_txt_comment1"
            style="@style/title_smaller" />

        <TextView
            android:id="@+id/find_txt_comment2"
            style="@style/title_smaller" />
    </LinearLayout>

    <Button
        android:id="@+id/find_btn_submit"
        style="@style/button_block"
        android:layout_marginBottom="15dip"
        android:background="@color/title_color"
        android:text="马上购车" />

</LinearLayout>