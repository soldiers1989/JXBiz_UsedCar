<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#10a6e2" />

            <corners android:radius="3dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="0.8dp"
        android:left="0.8dp"
        android:right="0.8dp"
        android:top="0.8dp">
        <shape>
            <solid android:color="#d3f1ff" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <!-- 应该是圆角 -->
            <corners android:radius="3dp" />
        </shape>
    </item>

</layer-list>