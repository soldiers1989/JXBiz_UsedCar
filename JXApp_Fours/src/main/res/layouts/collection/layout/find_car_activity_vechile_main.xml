<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_main"

    android:orientation="vertical" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@color/white"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <ImageButton

        android:id="@+id/find_car_img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/find_car_back_grey"
        android:layout_marginLeft="10dp"

   />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_centerInParent="true">
    <RadioGroup
        android:id="@+id/find_car_vechile_radio_group"
        style="@style/radio_group"
        android:layout_height="42dp"

        >

        <RadioButton
            android:id="@+id/find_car_rb_vechile_brand"
            style="@style/radio_bottom1"
            android:layout_height="42dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:checked="true"
            android:textSize="18sp"
            android:textColor="@color/find_car_title_text_color"
            android:text="品牌" />

        <RadioButton
            android:id="@+id/find_car_rb_vechile_collect"
            style="@style/radio_bottom1"
            android:layout_height="42dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="18sp"
            android:textColor="@color/find_car_title_text_color"
            android:text="收藏" />
        <RadioButton
            android:id="@+id/find_car_rb_vechile_condition"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            style="@style/radio_bottom1"
            android:layout_height="42dp"
            android:textSize="18sp"
            android:textColor="@color/find_car_title_text_color"
            android:text="筛选" />
    </RadioGroup>
    </LinearLayout>
    <ImageButton

        android:id="@+id/find_car_img_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/find_car_search_blue"
        android:layout_marginRight="12dp"
        />

</RelativeLayout>



    <FrameLayout
        android:id="@+id/find_car_flg_vechile_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="1" >
    </FrameLayout>

</LinearLayout>