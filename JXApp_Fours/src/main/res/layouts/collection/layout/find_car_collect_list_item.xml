<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:background="@color/white"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/find_car_img_pic"
        style="@style/image_logo2" />

    <RelativeLayout
        style="@style/layout_full_all"
        android:paddingLeft="8dip"
         >
        <!--android:paddingRight="4dip"-->
        <TextView
            android:id="@+id/find_car_txt_title"
            android:paddingTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/text_color"
            android:text="兰博基尼首挥的发挥发挥"

            android:textStyle="bold" />
      <!--  gravity="top|left"style="@style/title_smaller"-->


        <TextView
            android:id="@+id/find_car_txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textSize="15sp"
            android:textColor="@color/more_text"
            android:text="16.00万起"
            />
        <TextView
            android:id="@+id/find_car_txt_contrast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:textColor="@color/time_color"
            android:text="加入对比"

            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:background="@drawable/find_car_edit_text_background"
             />
      <!--  style="@style/text_smaller"-->


    </RelativeLayout>

</LinearLayout>