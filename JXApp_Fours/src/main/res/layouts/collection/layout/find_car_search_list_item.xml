<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:background="@color/white"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="12dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/find_car_img_pic"
        style="@style/image_logo2" />

    <RelativeLayout
        style="@style/layout_full_all"
        android:paddingLeft="10dip"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
         >
        <!--android:paddingRight="4dip"-->
        <TextView
            android:id="@+id/find_car_txt_title"
            android:paddingTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:text="奥迪"

            android:textStyle="bold" />
      <!--  gravity="top|left"style="@style/title_smaller"-->


        <TextView
            android:id="@+id/find_car_txt_minprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textSize="13sp"
            android:textColor="@color/more_text"
            android:text="16.00"
            />

        <TextView
            android:id="@+id/find_car_txt_maxprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/find_car_txt_minprice"
            android:textSize="13sp"
            android:textColor="@color/more_text"
            android:text="78"
            />
      <!--  style="@style/text_smaller"-->


    </RelativeLayout>

</LinearLayout>