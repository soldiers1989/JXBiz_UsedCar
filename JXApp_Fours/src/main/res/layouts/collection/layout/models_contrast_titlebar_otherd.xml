<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/models_contrast_rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="42dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
         android:paddingLeft="10dip"
         android:paddingRight="17dip" >

        <ImageButton
            android:id="@+id/models_contrast_ib_back_button"
            style="@style/icon_back"
            android:background="@mipmap/find_car_back_grey"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="返回" />

        <TextView
            android:id="@+id/titlebar_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="车型对比"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/models_contrast_txt_text"
            style="@style/anchor"
            android:layout_height="match_parent"

            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toLeftOf="@+id/models_contrast_txt_select_count"

            android:textColor="@color/title_color"
            android:text="已选择（" />
        <TextView
            android:id="@+id/models_contrast_txt_select_count"
            style="@style/anchor"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/models_contrast_txt_line"

            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/title_color"
            android:text="0" />
        <TextView
            android:id="@+id/models_contrast_txt_line"
            style="@style/anchor"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/models_contrast_txt_click_count"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/title_color"
            android:text="/" />
        <TextView
            android:id="@+id/models_contrast_txt_click_count"
            style="@style/anchor"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/titlebar_next_button4"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/title_color"
            android:text="0" />
        <TextView
            android:id="@+id/titlebar_next_button4"
            style="@style/anchor"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/title_color"
            android:text="）" />
    </RelativeLayout>

    <View
        android:id="@+id/titlebar_divider_line"
        style="@style/divider" >
    </View>

</LinearLayout>