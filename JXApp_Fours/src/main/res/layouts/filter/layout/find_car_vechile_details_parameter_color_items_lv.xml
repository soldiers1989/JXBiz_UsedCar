<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/find_car_txt_vd_parameter_color_title"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingLeft="10dp"
        android:text="外观颜色"
        android:gravity="center"
        android:textColor="#979797"
        android:textSize="14sp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/find_car_rl_vd_color_parameter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/find_car_img_vd_parameter_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/find_car_allcolor"/>

        <TextView
            android:layout_toRightOf="@+id/find_car_img_vd_parameter_color"
            android:id="@+id/find_car_txt_vd_parameter_color_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="全部颜色"
            android:textColor="@color/find_car_vechile_details_paramater_text_selector"/>

        <ImageView
            android:id="@+id/find_car_img_vd_parameter_color_checked"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@mipmap/find_car_select_checked"/>

    </RelativeLayout>


</LinearLayout>
