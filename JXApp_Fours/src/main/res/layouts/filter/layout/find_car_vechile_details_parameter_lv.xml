<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/find_car_txt_vechile_details_parameter_title"
        android:text="车身外观"
        android:textSize="15sp"
        android:textColor="#222222"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/find_car_txt_vechile_details_parameter_imagenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7张"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/find_car_txt_vechile_details_parameter_title"/>

    <TextView
        android:id="@+id/find_car_txt_vechile_details_parameter_findall"
        android:text="查看所有"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:textColor="@color/select_blue"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>

    <com.etong.android.frame.widget.EtongNoScrollGridView
        android:id="@+id/find_car_gv_vechile_details_parameter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:numColumns="3"
        android:gravity="center"
        android:verticalSpacing="6dp"
        android:layout_margin="6dp"
        android:background="@color/white"
        android:stretchMode="columnWidth"
      android:layout_gravity="center"
          />


</LinearLayout>
