    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="您将要拨打服务热线 : "
            android:textColor="#252525"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fc_road_assistance_dialog_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="18122055850 "
            android:textColor="#252525"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/fc_road_assistance_dialog_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="不了，谢谢"
            android:textColor="#FF6298" />

        <TextView
            android:id="@+id/fc_road_assistance_dialog_confime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="拨打服务热线"
            android:textColor="#FF6298"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

</LinearLayout>