<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/carloan_result_showcar"
            style="@style/find_car_carloan_resulttext_style"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="选择车型"
            android:singleLine="true"
            android:text="2015款ACS3 sport" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/default_right_enter" />
    </RelativeLayout>



    <View
        android:id="@+id/carloan_result_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/find_car_carloan_result_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/find_car_carloan_resulttext_style"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="裸车价 ： " />

        <EditText
            android:id="@+id/carloan_nakedcar_money"
            style="@style/find_car_carloan_resulttext_style"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="输入价格"
            android:text="1090000"
            android:textColor="#28B46B"
            android:maxLength="8"
            android:inputType="number"/>
    </LinearLayout>

</LinearLayout>