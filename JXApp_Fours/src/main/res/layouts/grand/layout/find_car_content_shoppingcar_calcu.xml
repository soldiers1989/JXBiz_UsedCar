<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/find_car_content_shoppingcar_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E9E9E9">

        <include layout="@layout/find_car_titlebar_order_defind" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E9E9E9"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="*选择车型 或 输入价格"
            android:textColor="#c2c2c2"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e9e9e9"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/find_car_calcu_select_cartype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@mipmap/find_car_content_shoppingcar_calcu_next" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="选择车型"
                        android:textColor="#787878"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"></TextView>
                </LinearLayout>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/find_car_content_shoppingcar_calcu_next" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:orientation="horizontal"
                android:layout_marginTop="1dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@mipmap/find_car_content_shoppingcar_calcu_next" />

                <EditText
                    android:id="@+id/find_car_calcu_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="输入价格"
                    android:background="@null"
                    android:textColor="#42bd7d"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:maxLength="7"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:inputType="number"
                    />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/find_car_calcu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="计算"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:background="@drawable/find_car_content_shoppingcar_bottom_btn"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/find_car_content_shoppingcar_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginLeft="20dp">

    </FrameLayout>

</android.support.v4.widget.DrawerLayout>