<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/default_appoint"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:background="#EFEFEF"
    android:orientation="horizontal">

    <Button
        android:id="@+id/default_appoint_drive"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_marginTop="0.5dp"
        android:layout_weight="1"
        android:background="@drawable/find_car_detail_content_bottom_btn_bg"
        android:gravity="center"
        android:text="试驾预约"
        android:textColor="@drawable/find_car_detail_content_bottom_tx_selector"
        android:textSize="16sp" />

    <Button
        android:id="@+id/default_appoint_order"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_marginTop="0.5dp"
        android:layout_weight="1"
        android:background="@drawable/find_car_detail_content_bottom_btn_bg"
        android:gravity="center"
        android:text="订购预约"
        android:textColor="@drawable/find_car_detail_content_bottom_tx_selector"
        android:textSize="16sp" />

    <Button
        android:id="@+id/default_appoint_credit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0.5dp"
        android:layout_marginTop="0.5dp"
        android:layout_weight="1"
        android:background="@drawable/find_car_detail_content_bottom_btn_bg"
        android:gravity="center"
        android:text="车贷申请"
        android:textColor="@drawable/find_car_detail_content_bottom_tx_selector"
        android:textSize="16sp" />
</LinearLayout>