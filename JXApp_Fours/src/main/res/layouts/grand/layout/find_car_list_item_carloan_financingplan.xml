<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" 
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/find_car_data_item_content_background_selector"
        android:orientation="vertical" 
        android:padding="10dp">

        <TextView 
            android:id="@+id/tv_plan_name"
            style="@style/layout"
            android:text="等额本金"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        
        <TextView 
            android:layout_marginTop="5dp"
            android:id="@+id/tv_plan_content"
            style="@style/layout"
            android:text="将手续费一次性支付，银行的手续费分摊至每期还款金额中，这种模式为等额本金模式"
            android:textSize="18sp"
            android:textColor="@color/gray_text"
            />
<!--             android:textColor="@drawable/item_color_selector" -->
        
    </LinearLayout>
        <View style="@style/divider" />

</LinearLayout>