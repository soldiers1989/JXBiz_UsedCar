<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_main"
    android:baselineAligned="false"
    android:orientation="vertical">

    <include layout="@layout/me_titlebar_default"/>

    <RadioGroup
        style="@style/radio_group"
        android:layout_height="45dp">

        <RadioButton
            android:id="@+id/me_rb_unused"
            style="@style/radio_bottom1"
            android:layout_height="45dp"
            android:checked="true"
            android:text="未使用"
            android:textColor="@color/me_find_car_title_text_color" />

        <RadioButton
            android:id="@+id/me_rb_used"
            style="@style/radio_bottom1"
            android:layout_height="45dp"
            android:text="已使用"
            android:textColor="@color/me_find_car_title_text_color" />

        <RadioButton
            android:id="@+id/me_rb_out_of_date"
            style="@style/radio_bottom1"
            android:layout_height="45dp"
            android:text="已过期"
            android:textColor="@color/me_find_car_title_text_color" />
    </RadioGroup>

    <View style="@style/divider" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <ListView
    android:id="@+id/me_lv_coupon"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    </ListView>
</LinearLayout>


</LinearLayout>
