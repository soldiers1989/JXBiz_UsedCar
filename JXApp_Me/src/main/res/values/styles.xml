<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_left15" parent="layout">
        <item name="android:background">@drawable/default_click_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">6dip</item>
        <item name="android:paddingBottom">6dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">15dip</item>
    </style>

    <style name="layout_left20" parent="layout">
        <item name="android:background">@drawable/default_click_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingBottom">12dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">20dip</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4a4a4a</item>
    </style>
    <!-- 文本 -->
    <style name="text_medium" parent="text">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="text_large" parent="text">
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>

    </style>


    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/login_text_color</item>
        <item name="android:background">@drawable/me_default_corner_button_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_block_me" parent="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">12dip</item>
        <item name="android:layout_marginRight">12dip</item>
        <item name="android:layout_height">45dip</item>
    </style>





    <style name="radio">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="radio_bottom1" parent="radio">
        <item name="android:background">@drawable/me_find_car_collect_default_radio_bottom_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
    </style>

    <style name="Me_TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/car_name_color</item>
    </style>

</resources>
