<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/used_car_dl_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <include layout="@layout/used_car_titlebar_order_defind" />

            <com.etong.android.frame.widget.pinnedlistview.PinnedSectionListView
                android:id="@+id/used_car_carconfig_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <include layout="@layout/used_car_config_info_bottom" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/used_car_frg_config_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:background="#FFF"
        android:orientation="vertical">

    </FrameLayout>
</android.support.v4.widget.DrawerLayout>