<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/used_car_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_weight="30"
        android:id="@+id/uc_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="35dp"
        android:paddingBottom="35dp"
        android:lineSpacingExtra="10dp"
        android:text="亲，你还未登录哦，请登录后再重新提交预约看车申请，谢谢~"
        android:textColor="@color/used_car_4a4a4a"
        android:textSize="18sp" />

    <Button
        android:layout_weight="1"
        android:id="@+id/uc_dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/used_car_dialog_btn_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>
