<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/used_car_image_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.etong.android.frame.widget.photoview.Frame_DefaultPhotoView
            android:id="@+id/used_car_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/used_car_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/used_car"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="2016款 特别版"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/used_car"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</LinearLayout>





