<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/used_car_sv_scroll"
    style="@style/layout_full_all"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/used_car_hot_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/gray_bg"
        android:orientation="vertical">
        <!--android:baselineAligned="false"-->
        <LinearLayout
            android:id="@+id/used_car_ll_search_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/used_car_txt_history_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="17dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="搜索历史"
                    android:textColor="#4a4a4a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/used_car_txt_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"

                    android:text="清空"
                    android:textColor="#4C9ADA"
                    android:textSize="15sp" />
                <!--android:paddingLeft="6dip"
                android:paddingRight="6dip"-->
            </RelativeLayout>

            <View style="@style/divider" />

            <com.etong.android.frame.widget.EtongNoScrollListView
                android:id="@+id/used_car_lv_history_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"></com.etong.android.frame.widget.EtongNoScrollListView>


        </LinearLayout>
    </LinearLayout>
</ScrollView>

