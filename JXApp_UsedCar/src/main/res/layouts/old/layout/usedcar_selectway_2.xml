<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        style="@style/used_car_text_defalt_30"
        android:layout_margin="10dp"
        android:text="方式二"
        android:textColor="@color/used_car_4a4a4a" />

    <TextView
        style="@style/used_car_text_defalt_30"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="亲，您也可以选择新增一辆车预约："
        android:textColor="@color/used_car_10a6e2" />

    <Button
        android:id="@+id/used_car_way2_btn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/used_car_btn_bg"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="新增预约"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp" />

</LinearLayout>