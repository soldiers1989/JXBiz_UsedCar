<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--默认的字体设置-->
    <style name="used_car_text_defalt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="used_car_text_defalt_30">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToastDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>



    <style name="myDivider" parent="divider">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/used_car_E6E6E6</item>
    </style>


    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="text_smaller" parent="text">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="anchor_next" parent="text_smaller">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="uc_progress_horizontal_my">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/used_car_filtrate_progress_horizontal_my
        </item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">@color/grey</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">4dip</item>
    </style>


    <style name="uc_radio_bottom1" parent="radio">
        <item name="android:background">@drawable/used_car_collect_default_radio_bottom_selector
        </item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
    </style>

</resources>
