<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/default_titlebar_whiteback_blackchart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/uc_gray_easy"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/uc_et_question_describe"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/uc_bg_input_bolder_gray"
            android:gravity="top"
            android:hint="请描述问题或意见"
            android:lineSpacingExtra="4sp"
            android:paddingLeft="7dp"
            android:paddingTop="10dp"
            android:textColor="@color/uc_black_quite"
            android:textColorHint="@color/uc_gray_quite"
            android:textSize="14sp" />

        <!--<EditText
            android:id="@+id/uc_et_telphone_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/uc_bg_input_bolder"
            android:hint="请输入您的手机号码"
            android:paddingLeft="5dp"
            android:textColor="@color/uc_gray_quite"
            android:textSize="14sp" />-->
        <!--去掉Button底部自带阴影效果：style="?android:attr/borderlessButtonStyle"-->
        <Button
            android:id="@+id/uc_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/uc_bg_button_login"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
