<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    style="@style/MatchMatch"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/titlebar_otherd_feault" />

    <ImageView
        android:id="@+id/uc_iv_pay_image"
        style="@style/WrapWrap"
        android:layout_gravity="center"
        android:layout_marginTop="40dp" />
    <TextView
        android:id="@+id/uc_tv_pay_results"
        style="@style/MatchWrap"
        android:text=""
        android:layout_marginTop="20dp"
        android:textColor="@color/uc_color_3e3a39"
        android:lineSpacingExtra="10dp"
        android:textSize="18sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/uc_tv_hint_message"
        style="@style/MatchWrap"
        android:text=""
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/uc_color_b3b3b3"
        />

    <LinearLayout
        style="@style/MatchWrap.Horizontal"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <Button
            android:id="@+id/uc_pay_buttonLeft"
            style="@style/WrapWrap"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@drawable/uc_identify_order_hollow_button_black"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/uc_color_3e3a39"/>
        <Button
            android:id="@+id/uc_pay_buttonRight"
            style="@style/WrapWrap"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:text=""
            android:background="@drawable/uc_identify_order_hollow_button_black"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:textColor="@color/uc_color_3e3a39"/>

    </LinearLayout>


</LinearLayout>
