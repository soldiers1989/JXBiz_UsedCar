<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar_otherd_feault" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/uc_drawerlayout_vehicle_evaluation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:scrollbars="none"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/uc_iv_vehicle_assess_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:id="@+id/uc_content_car_brand"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@mipmap/uc_ic_car_brands"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="车型品牌"
                            android:textColor="@color/uc_black_1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/uc_tv_car_brand"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:clickable="false"
                            android:drawablePadding="5dp"
                            android:drawableRight="@mipmap/uc_ic_arrow_right"
                            android:enabled="false"
                            android:gravity="center|right"
                            android:hint="请选择"
                            android:textColor="@color/uc_black_1"
                            android:textColorHint="@color/uc_gray_quite"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/uc_gray_driver" />

                    <LinearLayout
                        android:id="@+id/uc_content_vehicle_access_time"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:clickable="false"
                            android:drawableLeft="@mipmap/uc_ic_on_time"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="上牌时间"
                            android:textColor="@color/uc_black_1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/uc_tv_car_assess_regist_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:clickable="false"
                            android:drawablePadding="5dp"
                            android:drawableRight="@mipmap/uc_ic_arrow_right"
                            android:enabled="false"
                            android:gravity="center|right"
                            android:hint="请选择"
                            android:textColor="@color/uc_black_1"
                            android:textColorHint="@color/uc_gray_quite"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/uc_gray_driver" />

                    <LinearLayout
                        android:id="@+id/uc_content_car_region_address"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@mipmap/uc_ic_vehicle_possess"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="车辆属地"
                            android:textColor="@color/uc_black_1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/uc_txt_car_region_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawablePadding="5dp"
                            android:drawableRight="@mipmap/uc_ic_arrow_right"
                            android:enabled="false"
                            android:gravity="center|right"
                            android:hint="请选择"
                            android:textColor="@color/uc_black_1"
                            android:textColorHint="@color/uc_gray_quite"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/uc_gray_driver" />

                    <LinearLayout
                        android:id="@+id/uc_content_vehicle_access_color"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@mipmap/uc_ic_vehicle_color"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="车辆颜色"
                            android:textColor="@color/uc_black_1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/uc_tv_car_assess_color"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawablePadding="5dp"
                            android:drawableRight="@mipmap/uc_ic_arrow_right"
                            android:enabled="false"
                            android:gravity="center|right"
                            android:hint="请选择"
                            android:textColor="@color/uc_black_1"
                            android:textColorHint="@color/uc_gray_quite"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/uc_gray_driver" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:drawableLeft="@mipmap/uc_ic_mileage"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="行驶里程"
                            android:textColor="@color/uc_black_1"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/uc_edt_car_assess_mileage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:digits="1234567890"
                            android:inputType="number"
                            android:gravity="center|right"
                            android:hint="请输入数字"
                            android:textColor="@color/uc_black_1"
                            android:textColorHint="@color/uc_gray_quite"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="15dp"
                            android:drawablePadding="5dp"
                            android:gravity="center|right"
                            android:text="万公里"
                            android:textColor="@color/uc_black_1"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/uc_gray_driver" />

                    <Button
                        android:id="@+id/btn_car_assess"
                        android:layout_width="match_parent"
                        android:layout_height="45dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="20dip"
                        android:layout_marginBottom="20dip"
                        android:background="@drawable/uc_bg_button_login"
                        android:text="开始评估"
                        android:textColor="@color/white" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/white">

            <FrameLayout
                android:id="@+id/uc_content_menu_vehicle_evaluation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="right" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
