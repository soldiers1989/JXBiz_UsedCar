<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap.Vertical">

    <LinearLayout
        android:id="@+id/uc_ll_car_item"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/uc_bg_item_show_car"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/uc_iv_show_pic"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/uc_tv_car_introduce"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1.8"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="观致-3 2016款 都市 SUV 1.6T 自动致铮型"
                android:textColor="#2a2a2a"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/uc_tv_use_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="2016年04月 1.67万公里 "
                android:textColor="#8e8e8e"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/uc_tv_car_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="12.50万"
                android:textColor="@color/uc_text_red"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>