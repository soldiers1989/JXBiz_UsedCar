<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white"
    android:orientation="vertical">

    <com.etong.android.jxbizusedcar.widget.UC_SlideDragView
        android:id="@+id/uc_drag_view"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <!-- 下层布局 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:textColor="@color/white"
                android:padding="@dimen/padding_normal"
                android:id="@+id/btn_del"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/uc_second_red"
                android:text="删除" />
        </LinearLayout>
        <!-- 上层布局 -->
        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/uc_iv_car_picture"
                style="@style/image_logo2"
                android:layout_alignTop="@+id/uc_linearLayout"
                android:layout_marginLeft="15dp" />

            <LinearLayout
                android:id="@+id/uc_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/uc_iv_car_picture"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/uc_txt_ca_car_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="4sp"
                        android:text="观致-2016款 都市SUV 1.6T 自动致整型"
                        android:textColor="@color/uc_black_quite"
                        android:textSize="15sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <!-- <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                         android:gravity="center_vertical"
                         android:text="已认证"
                         android:textColor="@color/uc_second_red"
                         android:textSize="12sp" />-->

                    <!--android:layout_toRightOf="@+id/uc_txt_years_mileage"
                    android:layout_marginLeft="50dp"-->

                    <TextView
                        android:id="@+id/uc_txt_years_mileage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical|left"
                        android:text="2016年04月 1.67万公里"
                        android:textColor="#8e8e8e"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/uc_txt_cs_car_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="12.5万"
                        android:textColor="@color/uc_second_red"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/uc_txt_ca_isauthenticate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:text="已认证"
                        android:textColor="@color/uc_second_red"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </com.etong.android.jxbizusedcar.widget.UC_SlideDragView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/uc_gray_driver" />
</LinearLayout>
