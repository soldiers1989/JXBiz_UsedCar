<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/uc_gray_easy"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:visibility="gone"
        android:id="@+id/uc_mine_bold_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/uc_gray_driver" />


    <LinearLayout
        android:id="@+id/uc_ll_title_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/uc_mine_img_item"
            android:layout_marginLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/uc_ic_setting" />

        <TextView
            android:id="@+id/uc_mine_txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="@color/uc_black_quite"
            android:textSize="14sp" />

        <TextView
            android:textSize="14sp"
            android:textColor="@color/uc_gray_quite"
            android:gravity="center"
            android:id="@+id/uc_mine_right_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/uc_ic_arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/uc_gray_driver" />

</LinearLayout>
