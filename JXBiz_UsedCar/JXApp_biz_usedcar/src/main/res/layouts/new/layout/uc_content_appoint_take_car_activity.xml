<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uc_content_appoint_take_car_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/used_car_EFEFEF"
    android:orientation="vertical"
    tools:context="com.etong.android.jxappusedcar.content.UC_AppointTakeCar_Activity">

    <include layout="@layout/titlebar_self_bg_default" />

    <TextView
        android:id="@+id/uc_tv_carName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/used_car_bg_btn_white"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="2014款328i xdrive设计套装型"
        android:textColor="@color/used_car_2a2a2a"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/uc_btn_content_appoint_time_take_car"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/used_car_bg_btn_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/used_car_bg_btn_white"
            android:text="看车时间"
            android:textColor="@color/used_car_2a2a2a"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/uc_txt_appoint_time_take_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text=""
                android:textColor="@color/used_car_2a2a2a"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/used_car_iv_appoint_car_select_time" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/uc_btn_conform_take_car"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/uc_bg_btn_red_select"
        android:text="提交"
        android:textColor="@drawable/uc_txt_bg_select_white_and_grey" />

</LinearLayout>
