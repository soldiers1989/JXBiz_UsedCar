<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar_otherd_feault"/>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/uc_content_select_grand_drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.etong.android.frame.widget.pinnedlistview.PinnedSectionListView
                android:id="@+id/uc_content_select_brand_plv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:divider="@null"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/uc_content_select_brand_dialog"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="center"
                android:background="@drawable/find_car_show_head_toast_bg"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="30.0dip"
                android:visibility="invisible" />

            <com.etong.android.frame.widget.sortlistview.EtongSideBar
                android:id="@+id/uc_content_select_brand_grand_sidrbar"
                android:layout_width="30.0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center" />
        </FrameLayout>

        <LinearLayout
            android:clickable="true"
            android:id="@+id/uc_content_select_brand_menu_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#FFF"
            android:orientation="vertical">

        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>