<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar_otherd_feault" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/uc_drawerlayout_sell_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/uc_iv_sell_car_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_bg"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/used_car_bg_input_bolder"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="品牌"
                        android:textColor="@color/used_car_4a4a4a"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/used_car_tv_brand"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:clickable="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/used_car_ic_arrow_right"
                        android:gravity="center|right"
                        android:textColor="@color/used_car_4a4a4a"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/used_car_e6e6e6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/used_car_bg_input_bolder"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="上牌时间"
                        android:textColor="@color/used_car_4a4a4a"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/used_car_tv_registration_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:clickable="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/used_car_ic_arrow_right"
                        android:gravity="center|right"
                        android:textColor="@color/used_car_4a4a4a"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/used_car_e6e6e6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/used_car_bg_input_bolder"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="行车里程"
                        android:textColor="@color/used_car_4a4a4a"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/used_car_et_mileage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:digits="1234567890."
                        android:gravity="center|right"
                        android:hint="请输入数字"
                        android:textColor="@color/used_car_4a4a4a"
                        android:textColorHint="@color/used_car_9a9a9a"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="15dp"
                        android:drawablePadding="5dp"
                        android:gravity="center|right"
                        android:text="万公里"
                        android:textColor="@color/used_car_4a4a4a"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/used_car_btn_order_sellcars"
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/used_car_bg_button_login"
                    android:text="预约卖车"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/used_car_hotline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="咨询电话："
                        android:textColor="@color/used_car_2a2a2a"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/used_car_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="96512"
                        android:textColor="@color/used_car_cf1c36"
                        android:textSize="16sp"
                        android:textStyle="italic"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/white">

            <FrameLayout
                android:id="@+id/uc_content_menu_sell_car_frg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="right" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
