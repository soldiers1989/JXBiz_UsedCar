<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/uc_iv_sure_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/used_car_ic_sure_choice"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/uc_tv_list_item_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:focusable="false"
            android:padding="15dp"
            android:text="宝马"
            android:textColor="@drawable/used_car_bg_text_color_selector" />


    </RelativeLayout>

    <View
        style="@style/myDivider"
        android:layout_marginLeft="15dp"></View>

</LinearLayout>