<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/uc_ll_price_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/uc_rv_price_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:background="#f6f6f6"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义价格"
        android:textColor="#2a2a2a"
        android:paddingLeft="15dp"
        android:textSize="12sp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(万)"
            android:layout_marginLeft="9dp"
            android:textSize="12sp"
            android:textColor="#9a9a9a"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:paddingBottom="25dp"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/used_car_bg_edittex_frame"
            >

        <EditText
            android:id="@+id/uc_rt_min_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#2a2a2a"
            android:background="@null"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="万"
                android:textSize="13sp"
                android:textColor="#2a2a2a"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                />

        </RelativeLayout>

        <View
            style="@style/myDivider"
            android:layout_width="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2.5dp"
            android:background="#2a2a2a"
            android:layout_marginRight="2.5dp"
            ></View>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="35dp"
            android:background="@drawable/used_car_bg_edittex_frame"
            >

        <EditText
            android:id="@+id/uc_rt_max_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#2a2a2a"
            android:background="@null"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="万"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="#2a2a2a"
                android:layout_marginRight="7dp"
                />

        </RelativeLayout>
        <Button
            android:id="@+id/uc_btn_sure_price"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="35dp"
            android:background="@drawable/used_car_bg_buy_car_red"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:text="确定"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="13sp"
            />

    </LinearLayout>

</LinearLayout>