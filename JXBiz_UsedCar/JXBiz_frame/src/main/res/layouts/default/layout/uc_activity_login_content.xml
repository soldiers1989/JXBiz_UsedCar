<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical">

    <include layout="@layout/default_titlebar_whiteback_blackchart" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="30dip"
        android:gravity="center_vertical"
        android:text="无需注册，输入手机号即可登录"
        android:textColor="#9a9a9a"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/uc_et_telphone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:digits="0123456789"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:padding="15dp"
            android:maxLength="11"
            android:textColor="#2a2a2a"
            android:textColorHint="#9a9a9a"
            android:textSize="16sp" />

        <Button
            android:id="@+id/uc_et_verification_code_get"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dip"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="10dip"
            android:background="@drawable/uc_bg_verification_code_button_selector"
            android:maxLength="11"
            android:maxLines="1"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#efefef" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/uc_et_verification_code_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入验证码"
            android:minLines="1"
            android:padding="15dp"
            android:inputType="number"
            android:textColor="#2a2a2a"
            android:textColorHint="#9a9a9a"

            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/uc_btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/uc_bg_button_login"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
