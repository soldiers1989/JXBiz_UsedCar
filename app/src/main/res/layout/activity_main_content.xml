<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_content_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/main_bottom_height"
        android:orientation="vertical"></FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bottom_height"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_color"/>
        <LinearLayout
            android:id="@+id/main_content_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_bottom_height"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <RadioButton
                    android:id="@+id/main_bottom_find"
                    style="@style/main_bottom_find"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@drawable/main_bottom_find_selector"
                    android:gravity="bottom|center_horizontal"
                    android:text="发现"
                    android:textSize="14.0sp" />

                <RadioButton
                    android:id="@+id/main_bottom_news"
                    style="@style/main_bottom_find"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableTop="@drawable/main_bottom_news_selector"
                    android:gravity="bottom|center_horizontal"
                    android:text="资讯"
                    android:textSize="14.0sp" />

                <RadioButton
                    android:id="@+id/main_bottom_more"
                    style="@style/main_bottom_find"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableTop="@drawable/main_bottom_more_selector"
                    android:gravity="bottom|center_horizontal"
                    android:text="更多"
                    android:textSize="14.0sp" />

                <RadioButton
                    android:id="@+id/main_bottom_mine"
                    style="@style/main_bottom_find"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableTop="@drawable/main_bottom_mine_selector"
                    android:gravity="bottom|center_horizontal"
                    android:text="我的"
                    android:textSize="14.0sp" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
