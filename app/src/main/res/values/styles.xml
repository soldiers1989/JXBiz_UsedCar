    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/titlebar_color</item>
        <item name="colorPrimaryDark">@color/titlebar_color</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 主页中底部四个按钮的样式 -->
    <style name="main_bottom_find" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@mipmap/main_bottom_find_normal</item>
        <item name="android:textColor">@drawable/main_bottom_text_selector</item>
    </style>

    <style name="main_bottom_mine" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@mipmap/main_bottom_mine_normal</item>
        <item name="android:textColor">@drawable/main_bottom_text_selector</item>
    </style>

    <style name="main_bottom_more" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@mipmap/main_bottom_more_normal</item>
        <item name="android:textColor">@drawable/main_bottom_text_selector</item>
    </style>

    <style name="main_bottom_news" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@mipmap/main_bottom_news_normal</item>
        <item name="android:textColor">@drawable/main_bottom_text_selector</item>
    </style>


    <style name="layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_left15" parent="layout">
        <item name="android:background">@drawable/default_click_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">6dip</item>
        <item name="android:paddingBottom">6dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">15dip</item>
    </style>

    <style name="layout_left20" parent="layout">
        <item name="android:background">@drawable/default_click_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingBottom">12dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">20dip</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4a4a4a</item>
    </style>
    <!-- 文本 -->
    <style name="text_medium" parent="text">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="text_large" parent="text">
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
    </style>

</resources>
